<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical">

    <Button
            android:text="@string/cbc_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cbc_btn"/>
    <Button
            android:text="@string/food_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/food_btn"/>
    <Button
            android:text="@string/movies_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movie_btn"/>

    <Button
            android:text="@string/octranspo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/oc_btn"/>
</LinearLayout>